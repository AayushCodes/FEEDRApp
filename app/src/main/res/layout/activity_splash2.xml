<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_sma"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="0dp"
    android:background="@color/bg_green"
    android:textAlignment="center"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="603dp"
        android:layout_height="262dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/logo" />


    <TextView
        android:id="@+id/feedr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/lovelo_black"
        android:gravity="top"
        android:text="FEEDR"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="34sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedr"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lovelo_black"
        android:gravity="top"
        android:text="More Food? Share It"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp"
        tools:ignore="RtlCompat" />


    <TextView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idBtngetstart"
        android:layout_alignParentStart="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/lovelo_black"
        android:text="Powered by: ARROW"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/idBtngetstart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subhead"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/button_back"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/lovelo_black"
        android:text="GET STARTED"
        android:textColor="@color/black"
        app:backgroundTint="#FFFFFF" />
    //relative positioning




</RelativeLayout>